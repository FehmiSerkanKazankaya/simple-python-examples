import math as m

print("Silindirin hacmini ve yüzey alanını hesaplayan koda hoşgeldiniz!")

h=float(input("Lütfen silindirin yüksekliğini giriniz:"))
yaricap=float(input("Lütfen silindirin yarıçapını giriniz:"))

S=(2*m.pi*m.pow(yaricap,2))+(2*m.pi*yaricap*h)    #yüzey alanı=(2*pi*r**2)+(2*pi*r*h) 

V=m.pi*m.pow(yaricap,2)*h                         #hacim=pi*r**2*h

print("Yüzey alanı:",S, "Hacim:",V)
